@using MvcStok.Models.Entity
@model List<TBLMUSTERILER>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}
@using (Html.BeginForm("Index","Musteri",FormMethod.Get))
{
    <p>
        Aranacak Müşteri Adı: @Html.TextBox("p")
        <input type="submit" value="Ara" class="btn btn-primary"/>
    </p>
}

<table class="table table-bordered">
    <tr>s
        <th>MUSTERIID</th>
        <th>MUSTERIAD</th>
        <th>MUSTERISOYAD</th>
        <th>SİL</th>
        <th>GÜNCELLE</th>
        <th>ALERT</th>
    </tr>
    <tbody>
        @foreach (var mstr in Model)
        {
            <tr>
                <th>@mstr.MUSTERIID</th>
                <th>@mstr.MUSTERIAD</th>
                <th>@mstr.MUSTERISOYAD</th>
                <th><a href="/MUSTERI/SIL/@mstr.MUSTERIID" class="btn btn-danger">SİL</a></th>
                <th><a href="/MUSTERI/MusteriGetir/@mstr.MUSTERIID" class="btn btn-success">GÜNCELLE</a></th>
                <td>
                    @Html.ActionLink("SİL BUTONU", "SIL", new { id = mstr.MUSTERIID }, new
               {
                   @class = "btn btn-warning",
                   onclick = "return confirm('Gerçekten Silme İstiyor Musunuz?')"
               })
            </td>
        </tr>
            }
    </tbody>
</table>
<a href="/MUSTERI/YeniMusteri/" class="btn btn-primary">YENİ MÜŞTERİ EKLE</a>

